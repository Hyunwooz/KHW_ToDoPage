generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model Status {
  statusNo Int    @id @default(autoincrement())
  name     String
  color    String
  boards   Board[]
}

model Board {
  boardNo Int    @id @default(autoincrement())
  title   String
  index   Int
  status  Status @relation(fields: [statusNo], references: [statusNo], onDelete: Cascade)
  statusNo Int
  todos   ToDo[]
}

model ToDo {
  tdNo   Int    @id @default(autoincrement())
  content String
  index   Int
  board   Board  @relation(fields: [boardNo], references: [boardNo], onDelete: Cascade)
  boardNo Int
}


